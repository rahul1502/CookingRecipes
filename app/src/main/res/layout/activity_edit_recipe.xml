<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditRecipe">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:text="Recipe name:" />

    <EditText
        android:id="@+id/recipe_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:inputType="" />
    <Button
        android:id="@+id/clear_name"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/recipe_name"
        android:layout_below="@+id/textView1"
        android:layout_gravity="right|center_vertical"
        android:background="@drawable/ic_clear"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/recipe_name"
        android:text="Rating" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignStart="@+id/textView1"
        android:layout_below="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipe_description"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginBottom="-160dp"
        android:text="Recipe description:" />

    <EditText
        android:id="@+id/recipe_description"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="160dp" />

    <Button
        android:id="@+id/clear_description"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/recipe_description"
        android:layout_gravity="right|center_vertical"
        android:layout_toEndOf="@+id/recipe_description"
        android:background="@drawable/ic_clear"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipe_ingredients"
        android:layout_alignStart="@+id/textView1"
        android:text="Recipe Ingredients:" />

    <EditText
        android:id="@+id/recipe_ingredients"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView1"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/clear_ingredients"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_toEndOf="@+id/recipe_description"
        android:background="@drawable/ic_clear"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipe_instructions"
        android:layout_alignStart="@+id/textView1"
        android:text="Recipe Instructions:" />

    <EditText
        android:id="@+id/recipe_instructions"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginBottom="149dp" />

    <Button
        android:id="@+id/clear_instructions"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/recipe_instructions"
        android:layout_gravity="right|center_vertical"
        android:layout_toEndOf="@+id/recipe_description"
        android:background="@drawable/ic_clear"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recipe_url"
        android:layout_alignStart="@+id/textView1"
        android:text="Recipe URL (Optional):" />

    <EditText
        android:id="@+id/recipe_url"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginBottom="66dp" />

    <Button
        android:id="@+id/clear_url"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/recipe_url"
        android:layout_gravity="right|center_vertical"
        android:layout_toEndOf="@+id/recipe_description"
        android:background="@drawable/ic_clear"
        android:visibility="invisible" />

    <Button
        android:id="@+id/updateRecipe"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFF4081"
        android:text="Update Recipe" />
</RelativeLayout>